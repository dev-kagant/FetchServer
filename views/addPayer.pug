extends layout.pug

mixin input(type, name, label, value)
  div
    label(for=name) #{label}
    input(type=type name=name label=label value=value)

block content
  ul
    each err in error
      li= err
  form(action="/add-payer", method= "post")
    h1 Add Points
    +input("text", "payer", "Payer", payer)
    +input("number", "points", "Points", points)
    input(type="submit")
